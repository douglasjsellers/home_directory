# This is the default .slate file.
# If no ~/.slate file exists this is the file that will be used.

config defaultToCurrentScreen true
config nudgePercentOf screenSize
config resizePercentOf screenSize

# Resize Bindings
bind 1:cmd           move 0,0 screenSizeX,screenSizeY
bind 2:cmd           move 0,0 screenSizeX/2,screenSizeY
bind 3:cmd           move screenSizeX/2,0 screenSizeX/2,screenSizeY

# Focus Bindings
#bind right:cmd    focus right
#bind left:cmd     focus left
#bind up:cmd       focus up
#bind down:cmd     focus down
#bind up:cmd;alt   focus behind
#bind down:cmd;alt focus behind

# Window Hints
bind esc:cmd hint
                 

# Bind app switching
alias hyper ctrl;cmd
alias browser 'Google Chrome'
alias emacs 'Emacs'
alias terminal 'Terminal'
alias showNormalHint hint AOEUIDHTNSYXFBPKGMCW

bind a:${hyper} focus ${browser}
bind s:${hyper} focus ${emacs}
bind d:${hyper} focus ${terminal}
bind f:${hyper}  ${showNormalHint}
                             